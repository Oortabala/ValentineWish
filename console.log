document.addEventListener("DOMContentLoaded", () => {
  const audio = document.getElementById("bg-music");
  const button = document.querySelector(".music-button");

  console.log("–ê—É–¥–∏–æ:", audio);
  console.log("–ö–Ω–æ–ø–∫–∞:", button);

  if (!audio || !button) {
    console.error("–ê—É–¥–∏–æ –∏–ª–∏ –∫–Ω–æ–ø–∫–∞ –Ω–µ –Ω–∞–π–¥–µ–Ω—ã!");
    return;
  }

  button.addEventListener("click", () => {
    console.log("–ö–Ω–æ–ø–∫–∞ –Ω–∞–∂–∞—Ç–∞!");

    if (audio.paused) {
      audio.play().then(() => {
        button.textContent = "‚è∏ –û—Å—Ç–∞–Ω–æ–≤–∏—Ç—å";
      }).catch(error => console.error("–û—à–∏–±–∫–∞ –≤–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏—è:", error));
    } else {
      audio.pause();
      button.textContent = "üéµ –í–∫–ª—é—á–∏—Ç—å –º—É–∑—ã–∫—É";
    }
  });

  // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –ø—É—Ç—å –∫ –∞—É–¥–∏–æ—Ñ–∞–π–ª—É (—á—Ç–æ–±—ã –∏–∑–±–µ–∂–∞—Ç—å –∫—ç—à–∏—Ä–æ–≤–∞–Ω–∏—è)
  audio.src = "img/music.mp3?t=" + new Date().getTime();
});
